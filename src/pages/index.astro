---
import {
  SITE_TITLE,
  SITE_DESCRIPTION,
  personInfo,
  socialMedia,
  workExperiences,
} from "@/consts";

import PageLayout from "@/themes/atom/layouts/PageLayout.astro";
import PageMain from "@/themes/atom/pages/PageMain.astro";
import PageAbout from "@/themes/atom/pages/PageAbout.astro";
import PageServices from "@/themes/atom/pages/PageServices.astro";
import PageExperiences from "@/themes/atom/pages/PageExperiences.astro";

// import PageStatistics from "@/themes/atom/pages/PageStatistics.astro";
// import PageBlog from "@/themes/atom/pages/PageBlog.astro";

const { company, position } = workExperiences?.[0] || {};
---

<PageLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <!-- Page Main Section -->
  <PageMain {...personInfo} socialMedia={socialMedia} />

  <!-- Page About Section -->
  <PageAbout
    {...personInfo}
    socialMedia={socialMedia}
    position={position}
    company={company}
  />

  <!-- Page Serverices Section -->
  <PageServices />

  <!-- Page Exerperiences Section -->
  <PageExperiences workExperiences={workExperiences} />

  <!-- Page Statistics Section -->
  <!-- <PageStatistics /> -->

  <!-- Page Writting Blog Section -->
  <!-- <PageBlog /> -->
</PageLayout>
