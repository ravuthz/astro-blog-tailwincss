---
import { Icon } from "astro-icon/components";

const { className, socialMedia } = Astro.props;

const fontStyle =
  `w-12 h-12 ` + (className || "text-2xl text-white hover:text-yellow");
---

<!-- <i class:list={["bx bxl-facebook-square", fontStyle]} /> -->
<div
  class="flex items-center justify-center pt-5 pl-2 sm:justify-start sm:pt-0 mt-4"
>
  {
    !!socialMedia?.facebook && (
      <a href={socialMedia.facebook} aria-label="facebook">
        <i class:list={["bx bxl-facebook-square", fontStyle]} />
      </a>
    )
  }

  {
    !!socialMedia?.telegram && (
      <a href={socialMedia.telegram} aria-label="telegram">
        <i class:list={["bx bxl-telegram", fontStyle]} />
      </a>
    )
  }

  {
    !!socialMedia?.twitter && (
      <a href={socialMedia.twitter} aria-label="twitter">
        <i class:list={["bx bxl-twitter", fontStyle]} />
      </a>
    )
  }

  {
    !!socialMedia?.dribbble && (
      <a href={socialMedia.dribbble} aria-label="dribbble">
        <i class:list={["bx bxl-dribbble", fontStyle]} />
      </a>
    )
  }

  {
    !!socialMedia?.linkedin && (
      <a href={socialMedia.linkedin} aria-label="linkedin">
        <i class:list={["bx bxl-linkedin", fontStyle]} />
      </a>
    )
  }

  {
    !!socialMedia?.instagram && (
      <a href={socialMedia.instagram} aria-label="instragram">
        <i class:list={["bx bxl-instagram", fontStyle]} />
      </a>
    )
  }
</div>
